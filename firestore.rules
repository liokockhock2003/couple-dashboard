rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── users ────────────────────────────────────────────────────────────────
    match /users/{userId} {
      // Any authenticated user can read any user doc
      // (needed so dashboard can look up partner's displayName/photoURL)
      allow read: if request.auth != null;

      // Only the user themselves can write their own doc
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ── couples ──────────────────────────────────────────────────────────────
    match /couples/{coupleId} {
      // Only members of the couple can read or update
      allow read, update: if request.auth != null
        && request.auth.uid in resource.data.members;

      // Any authenticated user can create (our API handles this, but
      // client SDK also needs create for the onSnapshot listener to work)
      allow create: if request.auth != null;
    }

    // ── moods ─────────────────────────────────────────────────────────────────
    match /moods/{moodId} {
      // Allow read if:
      //   a) you own the mood, OR
      //   b) you are in a couple with the mood's owner
      allow read: if request.auth != null
        && (request.auth.uid == resource.data.userId
            || isPartnerOf(request.auth.uid, resource.data.userId));

      // Allow create if you are setting yourself as the userId
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.userId;

      // Allow update/delete only if you own the mood
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }

    // ── goals ─────────────────────────────────────────────────────────────────
    match /goals/{goalId} {
      // Both partners can read and write shared goals
      allow read, write: if request.auth != null
        && isInCouple(request.auth.uid, resource.data.coupleId);

      // Allow create if the user belongs to the couple they're assigning the goal to
      allow create: if request.auth != null
        && isInCouple(request.auth.uid, request.resource.data.coupleId);
    }

    // ── helpers ───────────────────────────────────────────────────────────────

    // Returns true if uid is a member of the given coupleId
    function isInCouple(uid, coupleId) {
      return uid in get(/databases/$(database)/documents/couples/$(coupleId)).data.members;
    }

    // Returns true if uid and targetUid share a couple
    function isPartnerOf(uid, targetUid) {
      let targetUser = get(/databases/$(database)/documents/users/$(targetUid)).data;
      return targetUser.coupleId != null
        && isInCouple(uid, targetUser.coupleId);
    }
  }
}
